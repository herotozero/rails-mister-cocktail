<h1><%= @cocktail.name %></h1>

  <ul>
    <p><% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>: <%= dose.ingredient.name %>
        <%= link_to "Delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
</p>

<ul>
  <li> <%= link_to "Add dose/ingredient", new_cocktail_dose_path(@cocktail) %> </li>
  <li> <%= link_to "Back to List" , cocktails_path %> </li>
</ul>

